@using Business
@using Entities

<hr />
<a href="category/create">Crear Categoría</a>
<hr />
@if (categories == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table id="categoriesTable" class="display table table-bordered table-hover">
        <thead>
            <tr>
                <th>Referencia</th>
                <th>Nombre Categoría</th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr>
                    <td>@category.CategoryID</td>
                    <td>@category.CategoryName</td>
                    <td>
                        <a href="category/update/@category.CategoryID">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<CategoryEntity> categories = new List<CategoryEntity>();

    protected override async Task OnInitializedAsync()
    {
        categories = B_Category.CategoryList();
    }

}